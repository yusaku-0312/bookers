<h1>Editing Book</h1>
<div class="book-form">
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <div class="submit-button">
      <%= f.submit 'Update Book' %>
    </div>
  <% end %>
</div>
<div>
  <%= link_to 'Show', book_path(@book.id) %> | <a href="/books">Back</a>
</div>