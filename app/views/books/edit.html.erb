<h1>Editing Book</h1>
  <% if @book.errors.any? %>
    <div class="error-box">
      <div class="error-title">
        <% if @book.errors.count == 1 %>
          <%= @book.errors.count %> error prohibited this book from being saved:
        <% end %>
        <% if @book.errors.count >= 2 %>
          <%= @book.errors.count %> errors prohibited this book from being saved:
        <% end %>
      </div>
      <div class="error-contents">
        <ul>
          <% @book.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
<div class="book-form">
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <div class="submit-button">
      <%= f.submit 'Update Book' %>
    </div>
  <% end %>
</div>
<div>
  <%= link_to 'Show', book_path(@book.id) %> | <a href="/books">Back</a>
</div>